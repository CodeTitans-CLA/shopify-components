{% doc %}
  @prompt
    Give me a perfect looking refund policy for my page
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-refund-policy-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
  }

  .ai-refund-policy__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
    padding-bottom: {{ block.settings.header_spacing | divided_by: 2 }}px;
    border-bottom: 2px solid {{ block.settings.accent_color }};
  }

  .ai-refund-policy__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px 0;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-refund-policy__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-refund-policy__content-{{ ai_gen_id }} {
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .ai-refund-policy__section-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.section_spacing }}px;
    padding: {{ block.settings.section_padding_inner }}px;
    background-color: {{ block.settings.section_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    border-left: 4px solid {{ block.settings.accent_color }};
  }

  .ai-refund-policy__section-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px 0;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ai-refund-policy__icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    color: {{ block.settings.accent_color }};
  }

  .ai-refund-policy__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.8;
    margin: 0 0 16px 0;
  }

  .ai-refund-policy__text-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-refund-policy__list-{{ ai_gen_id }} {
    margin: 16px 0;
    padding-left: 24px;
  }

  .ai-refund-policy__list-{{ ai_gen_id }} li {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.8;
    margin-bottom: 12px;
    position: relative;
  }

  .ai-refund-policy__list-{{ ai_gen_id }} li::marker {
    color: {{ block.settings.accent_color }};
  }

  .ai-refund-policy__highlight-{{ ai_gen_id }} {
    background-color: {{ block.settings.highlight_bg_color }};
    padding: {{ block.settings.highlight_padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    margin: {{ block.settings.section_spacing }}px 0;
    border: 2px solid {{ block.settings.accent_color }};
  }

  .ai-refund-policy__highlight-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px 0;
    font-weight: 600;
  }

  .ai-refund-policy__contact-{{ ai_gen_id }} {
    text-align: center;
    margin-top: {{ block.settings.content_spacing }}px;
    padding: {{ block.settings.section_padding_inner }}px;
    background-color: {{ block.settings.section_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-refund-policy__contact-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px 0;
    font-weight: 600;
  }

  .ai-refund-policy__contact-info-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    margin-bottom: 8px;
  }

  .ai-refund-policy__contact-link-{{ ai_gen_id }} {
    color: {{ block.settings.accent_color }};
    text-decoration: none;
    font-weight: 500;
  }

  .ai-refund-policy__contact-link-{{ ai_gen_id }}:hover {
    text-decoration: underline;
  }

  @media screen and (max-width: 749px) {
    .ai-refund-policy-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-refund-policy__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-refund-policy__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.85 }}px;
    }

    .ai-refund-policy__section-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.section_title_size | times: 0.85 }}px;
    }

    .ai-refund-policy__section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_inner | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-refund-policy-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-refund-policy__header-{{ ai_gen_id }}">
    <h1 class="ai-refund-policy__title-{{ ai_gen_id }}">{{ block.settings.page_title }}</h1>
    {% if block.settings.page_subtitle != blank %}
      <p class="ai-refund-policy__subtitle-{{ ai_gen_id }}">{{ block.settings.page_subtitle }}</p>
    {% endif %}
  </div>

  <div class="ai-refund-policy__content-{{ ai_gen_id }}">
    {% if block.settings.show_intro %}
      <div class="ai-refund-policy__section-{{ ai_gen_id }}">
        <p class="ai-refund-policy__text-{{ ai_gen_id }}">
          {{ block.settings.intro_text }}
        </p>
      </div>
    {% endif %}

    {% if block.settings.show_timeframe %}
      <div class="ai-refund-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-refund-policy__section-title-{{ ai_gen_id }}">
          <svg class="ai-refund-policy__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          {{ block.settings.timeframe_title }}
        </h2>
        <p class="ai-refund-policy__text-{{ ai_gen_id }}">
          {{ block.settings.timeframe_text }}
        </p>
      </div>
    {% endif %}

    {% if block.settings.show_conditions %}
      <div class="ai-refund-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-refund-policy__section-title-{{ ai_gen_id }}">
          <svg class="ai-refund-policy__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          {{ block.settings.conditions_title }}
        </h2>
        <p class="ai-refund-policy__text-{{ ai_gen_id }}">
          {{ block.settings.conditions_intro }}
        </p>
        <ul class="ai-refund-policy__list-{{ ai_gen_id }}">
          {% if block.settings.condition_1 != blank %}
            <li>{{ block.settings.condition_1 }}</li>
          {% endif %}
          {% if block.settings.condition_2 != blank %}
            <li>{{ block.settings.condition_2 }}</li>
          {% endif %}
          {% if block.settings.condition_3 != blank %}
            <li>{{ block.settings.condition_3 }}</li>
          {% endif %}
          {% if block.settings.condition_4 != blank %}
            <li>{{ block.settings.condition_4 }}</li>
          {% endif %}
          {% if block.settings.condition_5 != blank %}
            <li>{{ block.settings.condition_5 }}</li>
          {% endif %}
        </ul>
      </div>
    {% endif %}

    {% if block.settings.show_non_refundable %}
      <div class="ai-refund-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-refund-policy__section-title-{{ ai_gen_id }}">
          <svg class="ai-refund-policy__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="15" y1="9" x2="9" y2="15"></line>
            <line x1="9" y1="9" x2="15" y2="15"></line>
          </svg>
          {{ block.settings.non_refundable_title }}
        </h2>
        <p class="ai-refund-policy__text-{{ ai_gen_id }}">
          {{ block.settings.non_refundable_intro }}
        </p>
        <ul class="ai-refund-policy__list-{{ ai_gen_id }}">
          {% if block.settings.non_refundable_1 != blank %}
            <li>{{ block.settings.non_refundable_1 }}</li>
          {% endif %}
          {% if block.settings.non_refundable_2 != blank %}
            <li>{{ block.settings.non_refundable_2 }}</li>
          {% endif %}
          {% if block.settings.non_refundable_3 != blank %}
            <li>{{ block.settings.non_refundable_3 }}</li>
          {% endif %}
          {% if block.settings.non_refundable_4 != blank %}
            <li>{{ block.settings.non_refundable_4 }}</li>
          {% endif %}
        </ul>
      </div>
    {% endif %}

    {% if block.settings.show_process %}
      <div class="ai-refund-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-refund-policy__section-title-{{ ai_gen_id }}">
          <svg class="ai-refund-policy__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
          {{ block.settings.process_title }}
        </h2>
        <p class="ai-refund-policy__text-{{ ai_gen_id }}">
          {{ block.settings.process_text }}
        </p>
      </div>
    {% endif %}

    {% if block.settings.show_shipping %}
      <div class="ai-refund-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-refund-policy__section-title-{{ ai_gen_id }}">
          <svg class="ai-refund-policy__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="1" y="3" width="15" height="13"></rect>
            <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
            <circle cx="5.5" cy="18.5" r="2.5"></circle>
            <circle cx="18.5" cy="18.5" r="2.5"></circle>
          </svg>
          {{ block.settings.shipping_title }}
        </h2>
        <p class="ai-refund-policy__text-{{ ai_gen_id }}">
          {{ block.settings.shipping_text }}
        </p>
      </div>
    {% endif %}

    {% if block.settings.show_highlight %}
      <div class="ai-refund-policy__highlight-{{ ai_gen_id }}">
        <h3 class="ai-refund-policy__highlight-title-{{ ai_gen_id }}">{{ block.settings.highlight_title }}</h3>
        <p class="ai-refund-policy__text-{{ ai_gen_id }}">{{ block.settings.highlight_text }}</p>
      </div>
    {% endif %}

    {% if block.settings.show_contact %}
      <div class="ai-refund-policy__contact-{{ ai_gen_id }}">
        <h2 class="ai-refund-policy__contact-title-{{ ai_gen_id }}">{{ block.settings.contact_title }}</h2>
        {% if block.settings.contact_email != blank %}
          <p class="ai-refund-policy__contact-info-{{ ai_gen_id }}">
            Email: <a href="mailto:{{ block.settings.contact_email }}" class="ai-refund-policy__contact-link-{{ ai_gen_id }}">{{ block.settings.contact_email }}</a>
          </p>
        {% endif %}
        {% if block.settings.contact_phone != blank %}
          <p class="ai-refund-policy__contact-info-{{ ai_gen_id }}">
            Phone: <a href="tel:{{ block.settings.contact_phone }}" class="ai-refund-policy__contact-link-{{ ai_gen_id }}">{{ block.settings.contact_phone }}</a>
          </p>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>


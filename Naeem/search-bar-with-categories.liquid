    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom CSS class (Optional)",
      "info": "For advanced styling."
    }
  ],
  "presets": [
    {
      "name": "Collection Search Bar",
      "category": "Text"
    }
  ]
}
{% endschema %}
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "text",
      "id": "default_label",
      "label": "Dropdown default label",
      "default": "All Categories"
    },
    {
      "type": "text",

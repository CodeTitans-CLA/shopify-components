{% doc %}
  @prompt
    Large bold text filled with an image. Include a setting to control the background color.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-container-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-image-text-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: inline-block;
  }

  .ai-image-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: 700;
    line-height: 1.1;
    margin: 0;
    background-image: url('{{ block.settings.fill_image | image_url: width: 2000 }}');
    background-size: cover;
    background-position: center;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-text-placeholder-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: 700;
    line-height: 1.1;
    margin: 0;
    color: #cccccc;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-image-text-empty-state-{{ ai_gen_id }} {
    font-size: 14px;
    color: #666;
    text-align: center;
    margin-top: 20px;
    font-weight: 400;
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.6 }}px;
    }

    .ai-image-text-placeholder-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-image-text-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-image-text-wrapper-{{ ai_gen_id }}">
    {% if block.settings.fill_image %}
      <h1 class="ai-image-text-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </h1>
    {% else %}
      <h1 class="ai-image-text-placeholder-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </h1>
      <div class="ai-image-text-empty-state-{{ ai_gen_id }}">
        Next, add an image to fill the text
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Image filled text",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "BOLD TEXT"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 40,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Text size",
      "default": 100
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "fill_image",
      "label": "Fill image"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Image filled text"
    }
  ]
}
{% endschema %}

{% doc %}
  @prompt
    I need a perfect shipping policy template fully editable and looking modern
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shipping-policy-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    line-height: 1.6;
  }

  .ai-shipping-policy__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    margin-bottom: {{ block.settings.title_spacing }}px;
    padding-bottom: {{ block.settings.title_spacing | divided_by: 2 }}px;
    border-bottom: {{ block.settings.divider_thickness }}px solid {{ block.settings.divider_color }};
  }

  .ai-shipping-policy__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.title_spacing | divided_by: 3 }}px;
    line-height: 1.2;
  }

  .ai-shipping-policy__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-shipping-policy__content-{{ ai_gen_id }} {
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .ai-shipping-policy__section-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.section_spacing }}px;
    padding: {{ block.settings.section_padding_inner }}px;
    background-color: {{ block.settings.section_bg_color }};
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.section_border_width }}px solid {{ block.settings.section_border_color }};
  }

  .ai-shipping-policy__section-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.section_title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.section_title_spacing }}px;
    line-height: 1.3;
  }

  .ai-shipping-policy__section-content-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_text_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-shipping-policy__section-content-{{ ai_gen_id }} p {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px;
  }

  .ai-shipping-policy__section-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-shipping-policy__section-content-{{ ai_gen_id }} ul,
  .ai-shipping-policy__section-content-{{ ai_gen_id }} ol {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px;
    padding-left: 20px;
  }

  .ai-shipping-policy__section-content-{{ ai_gen_id }} li {
    margin-bottom: {{ block.settings.list_spacing }}px;
  }

  .ai-shipping-policy__section-content-{{ ai_gen_id }} strong {
    color: {{ block.settings.heading_color }};
    font-weight: 600;
  }

  .ai-shipping-policy__highlight-{{ ai_gen_id }} {
    background-color: {{ block.settings.highlight_bg_color }};
    padding: {{ block.settings.highlight_padding }}px;
    border-left: 4px solid {{ block.settings.highlight_border_color }};
    border-radius: {{ block.settings.border_radius | divided_by: 2 }}px;
    margin: {{ block.settings.section_spacing | divided_by: 2 }}px 0;
  }

  .ai-shipping-policy__highlight-{{ ai_gen_id }} p {
    margin: 0;
    font-size: {{ block.settings.body_text_size }}px;
    color: {{ block.settings.text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-shipping-policy-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-shipping-policy__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-shipping-policy__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.85 }}px;
    }

    .ai-shipping-policy__section-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.section_title_size | times: 0.8 }}px;
    }

    .ai-shipping-policy__section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_inner | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-shipping-policy-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-shipping-policy__header-{{ ai_gen_id }}">
    {%- if block.settings.main_title != blank -%}
      <h1 class="ai-shipping-policy__title-{{ ai_gen_id }}">{{ block.settings.main_title }}</h1>
    {%- endif -%}
    {%- if block.settings.subtitle != blank -%}
      <p class="ai-shipping-policy__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {%- endif -%}
  </div>

  <div class="ai-shipping-policy__content-{{ ai_gen_id }}">
    {%- if block.settings.show_processing_time -%}
      <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.processing_title }}</h2>
        <div class="ai-shipping-policy__section-content-{{ ai_gen_id }}">
          {{ block.settings.processing_content }}
        </div>
      </div>
    {%- endif -%}

    {%- if block.settings.show_shipping_methods -%}
      <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.shipping_methods_title }}</h2>
        <div class="ai-shipping-policy__section-content-{{ ai_gen_id }}">
          {{ block.settings.shipping_methods_content }}
        </div>
      </div>
    {%- endif -%}

    {%- if block.settings.show_delivery_times -%}
      <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.delivery_times_title }}</h2>
        <div class="ai-shipping-policy__section-content-{{ ai_gen_id }}">
          {{ block.settings.delivery_times_content }}
        </div>
      </div>
    {%- endif -%}

    {%- if block.settings.show_shipping_costs -%}
      <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.shipping_costs_title }}</h2>
        <div class="ai-shipping-policy__section-content-{{ ai_gen_id }}">
          {{ block.settings.shipping_costs_content }}
        </div>
      </div>
    {%- endif -%}

    {%- if block.settings.show_international -%}
      <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.international_title }}</h2>
        <div class="ai-shipping-policy__section-content-{{ ai_gen_id }}">
          {{ block.settings.international_content }}
        </div>
      </div>
    {%- endif -%}

    {%- if block.settings.show_tracking -%}
      <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.tracking_title }}</h2>
        <div class="ai-shipping-policy__section-content-{{ ai_gen_id }}">
          {{ block.settings.tracking_content }}
        </div>
      </div>
    {%- endif -%}

    {%- if block.settings.show_issues -%}
      <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.issues_title }}</h2>
        <div class="ai-shipping-policy__section-content-{{ ai_gen_id }}">
          {{ block.settings.issues_content }}
        </div>
      </div>
    {%- endif -%}

    {%- if block.settings.highlight_text != blank -%}
      <div class="ai-shipping-policy__highlight-{{ ai_gen_id }}">
        {{ block.settings.highlight_text }}
      </div>
    {%- endif -%}

    {%- if block.settings.show_contact -%}
      <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
        <h2 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.contact_title }}</h2>
        <div class="ai-shipping-policy__section-content-{{ ai_gen_id }}">
          {{ block.settings.contact_content }}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Shipping policy",
  "settings": [
    {
      "type": "header",
      "content": "Main heading"
    },
    {
      "type": "text",
      "id": "main_title",
      "label": "Title",
      "default": "Shipping Policy"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Last updated: January 2025"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Title alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Processing time"
    },
    {
      "type": "checkbox",
      "id": "show_processing_time",
      "label": "Show processing time section",
      "default": true
    },
    {
      "type": "text",
      "id": "processing_title",
      "label": "Section title",
      "default": "Order Processing Time"
    },
    {
      "type": "richtext",
      "id": "processing_content",
      "label": "Content",
      "default": "<p>All orders are processed within 1-2 business days. Orders are not shipped or delivered on weekends or holidays.</p><p>If we are experiencing a high volume of orders, shipments may be delayed by a few days. Please allow additional days in transit for delivery.</p>"
    },
    {
      "type": "header",
      "content": "Shipping methods"
    },
    {
      "type": "checkbox",
      "id": "show_shipping_methods",
      "label": "Show shipping methods section",
      "default": true
    },
    {
      "type": "text",
      "id": "shipping_methods_title",
      "label": "Section title",
      "default": "Shipping Methods"
    },
    {
      "type": "richtext",
      "id": "shipping_methods_content",
      "label": "Content",
      "default": "<p>We offer the following shipping options:</p><ul><li><strong>Standard Shipping:</strong> 5-7 business days</li><li><strong>Express Shipping:</strong> 2-3 business days</li><li><strong>Overnight Shipping:</strong> 1 business day</li></ul>"
    },
    {
      "type": "header",
      "content": "Delivery times"
    },
    {
      "type": "checkbox",
      "id": "show_delivery_times",
      "label": "Show delivery times section",
      "default": true
    },
    {
      "type": "text",
      "id": "delivery_times_title",
      "label": "Section title",
      "default": "Estimated Delivery Times"
    },
    {
      "type": "richtext",
      "id": "delivery_times_content",
      "label": "Content",
      "default": "<p>Delivery times are estimates and commence from the date of shipping, rather than the date of order. Delivery times are to be used as a guide only and are subject to the acceptance and approval of your order.</p><p>Please note that delivery times can be affected by stock availability and potential delays by shipping companies.</p>"
    },
    {
      "type": "header",
      "content": "Shipping costs"

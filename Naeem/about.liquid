{% comment %}
  LiftGravity About Section - fully dynamic (features, cards, FAQ as blocks)
{% endcomment %}

<style>
:root {
  --brand: {{ section.settings.brand_color }};
  --accent: {{ section.settings.accent_color }};
  --dark: #2B2B2B;
  --light: {{ section.settings.background_light }};
  --radius: 16px;
  --shadow: 0 18px 40px rgba(0, 0, 0, .05);
  --max: {{ section.settings.container_width }}px;
  --ff: {{ section.settings.font_family.family }}, {{ section.settings.font_family.fallback_families }};
}

#lg-about-{{ section.id }} * {
  box-sizing: border-box;
}

#lg-about-{{ section.id }} {
  background: #fff;
  font-family: var(--ff);
  color: var(--dark);
  font-weight: {{ section.settings.font_weight }};
  font-size: {{ section.settings.font_size }}px;
  line-height: 1.6;
}

/* ====== WIDTH VARIANTS ====== */
#lg-about-{{ section.id }} .lg-page-wrap {
  /* fallback */
  width: 100%;
}

#lg-about-{{ section.id }} .lg-width-default {
  width: 100%;
  margin: 0 auto;
  padding: 0 1rem 3.5rem;
}

#lg-about-{{ section.id }} .lg-width-boxed {
  width: min(100%, var(--max));
  margin: 0 auto;
  padding: 0 1rem 3.5rem;
}

#lg-about-{{ section.id }} .lg-width-full {
  width: 100%;
  max-width: none;
  margin: 0;
  padding: 0 0 3.5rem;
}

#lg-about-{{ section.id }} .lg-section-space {
  margin-bottom: 3.2rem;
}

/* headings */
#lg-about-{{ section.id }} h1,
#lg-about-{{ section.id }} h2,
#lg-about-{{ section.id }} h3,
#lg-about-{{ section.id }} h4 {
  font-weight: 700;
  color: var(--dark);
  margin-bottom: 0.75rem;
}

#lg-about-{{ section.id }} h1 {font-size: 40px; line-height: 1.12;}
#lg-about-{{ section.id }} h2 {font-size: 34px; line-height: 1.12;}
#lg-about-{{ section.id }} h3 {font-size: 22px; line-height: 1.2;}

#lg-about-{{ section.id }} p {
  font-size: {{ section.settings.font_size }}px;
  line-height: 1.7;
  color: rgba(43,43,43,.8);
}

#lg-about-{{ section.id }} .lg-badge {
  display: inline-block;
  background: rgba(91,58,41,.1);
  color: var(--brand);
  padding: .35rem 1rem;
  border-radius: 12px;
  font-size: 14px;
  font-weight: 500;
  margin-bottom: 1rem;
}

#lg-about-{{ section.id }} .lg-btn {
  background: var(--brand);
  color: #fff;
  border: none;
  padding: .7rem 1.4rem;
  border-radius: 6px;
  font-weight: 500;
  font-size: 16px;
  line-height: 1.4;
  cursor: pointer;
  transition: background .25s ease, color .25s ease, transform .25s ease;
  display: inline-block;
  text-decoration: none;
  margin-top: .8rem;
}

#lg-about-{{ section.id }} .lg-btn:hover {
  background: var(--accent);
  color: #2B2B2B;
  transform: translateY(-1px);
}

#lg-about-{{ section.id }} .lg-btn.secondary {
  background: #fff;
  border: 1px solid rgba(91,58,41,.35);
  color: var(--brand);
}

#lg-about-{{ section.id }} .lg-btn.secondary:hover {
  background: var(--accent);
  border-color: var(--accent);
  color: #2B2B2B;
}

/* HERO */
#lg-about-{{ section.id }} .lg-hero {
  display: grid;
  grid-template-columns: 1.05fr .95fr;
  gap: 2.5rem;
  align-items: center;
  margin-top: 2.5rem;
}

#lg-about-{{ section.id }} .lg-hero-img {
  {% if section.settings.hero_image != blank %}
    background: url({{ section.settings.hero_image | image_url: width: 1200 }}) center/cover no-repeat;
  {% else %}
    background: #f7f5f3;
  {% endif %}
  border-radius: var(--radius);
  min-height: 340px;
  box-shadow: var(--shadow);
}

/* FEATURE BOX */
#lg-about-{{ section.id }} .lg-feature-box {
  display: grid;
  grid-template-columns: .85fr 1.15fr;
  background: #fff;
  border: 1px solid #eee;
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  overflow: hidden;
  gap: 0;
}

#lg-about-{{ section.id }} .lg-feature-left {
  background: #FDF9EF;
  padding: 1.8rem 1.4rem;
}

#lg-about-{{ section.id }} .lg-feature-right {
  padding: 1.8rem;
}

#lg-about-{{ section.id }} .lg-feat-item {
  background: #fff;
  border: 1px solid rgba(227,181,5,.2);
  border-radius: 10px;
  padding: .6rem .8rem;
  display: flex;
  align-items: center;
  gap: .6rem;
  font-size: 15px;
  font-weight: 500;
  margin-bottom: .6rem;
}

#lg-about-{{ section.id }} .lg-feat-icon {
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: var(--accent);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 13px;
  color: #2B2B2B;
}

#lg-about-{{ section.id }} .lg-checklist {
  list-style: none;
  margin-top: .6rem;
}

#lg-about-{{ section.id }} .lg-checklist li {
  font-size: 15px;
  margin-bottom: .35rem;
}

#lg-about-{{ section.id }} .lg-checklist li::before {
  content: "• ";
  color: var(--accent);
  font-weight: 700;
}

/* AUDIENCE */
#lg-about-{{ section.id }} .lg-audience {
  background: var(--light);
  padding: 3rem 2rem;
  border-radius: 18px;
}

#lg-about-{{ section.id }} .lg-audience-title {
  text-align: center;
  margin-bottom: 2.2rem;
}

#lg-about-{{ section.id }} .lg-audience-cards {
  display: grid;
  grid-template-columns: repeat(3,1fr);
  gap: 1.3rem;
}

#lg-about-{{ section.id }} .lg-aud-card {
  background: #fff;
  border: 1px solid rgba(91,58,41,.1);
  border-radius: 14px;
  box-shadow: 0 12px 20px rgba(0,0,0,.03);
  text-align: center;
  padding: 1.5rem 1.3rem 1.6rem;
  transition: transform .2s ease, box-shadow .2s ease;
}

#lg-about-{{ section.id }} .lg-aud-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 18px 30px rgba(0,0,0,.05);
}

#lg-about-{{ section.id }} .lg-aud-img {
  width: 100%;
  height: 150px;
  border-radius: 12px;
  margin-bottom: 1rem;
  background: #f6f6f6;
  background-size: cover;
  background-position: center;
}

/* FAQ LAYOUT */
#lg-about-{{ section.id }} .lg-faq-wrap {
  display: grid;
  grid-template-columns: 1.05fr .95fr;
  gap: 2.2rem;
  align-items: center;
}

#lg-about-{{ section.id }} .lg-faq-img {
  {% if section.settings.faq_image != blank %}
    background: url({{ section.settings.faq_image | image_url: width: 1200 }}) center/cover no-repeat;
  {% else %}
    background: #f2f2f2;
  {% endif %}
  min-height: 320px;
  border-radius: 14px;
  box-shadow: var(--shadow);
}

#lg-about-{{ section.id }} .lg-faq-box details {
  background: #fff;
  border: 1px solid rgba(91,58,41,.1);
  border-radius: 12px;
  padding: .65rem .8rem;
  margin-bottom: .6rem;
}

#lg-about-{{ section.id }} .lg-faq-box summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  font-weight: 500;
  cursor: pointer;
  gap: .6rem;
}

#lg-about-{{ section.id }} .lg-faq-box summary::after {
  content: "+";
  color: var(--accent);
  font-weight: 700;
  font-size: 18px;
}

#lg-about-{{ section.id }} .lg-faq-box details[open] summary::after {
  content: "–";
}

#lg-about-{{ section.id }} .lg-faq-box details p {
  margin-top: .5rem;
  font-size: 15px;
  line-height: 1.5;
  color: rgba(43,43,43,.8);
}

/* MODAL */
#lg-about-{{ section.id }} .lg-modal-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,.25);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding: 1rem;
}

#lg-about-{{ section.id }} .lg-modal-overlay.is-open {
  display: flex;
  animation: lgFadeIn .2s ease;
}

#lg-about-{{ section.id }} .lg-modal {
  background: #fff;
  width: min(100%, 540px);
  border-radius: 16px;
  box-shadow: 0 15px 55px rgba(0,0,0,.12);
  padding: 1.3rem 1.3rem 1.4rem;
  position: relative;
  animation: lgZoomIn .18s ease;
}

#lg-about-{{ section.id }} .lg-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 1rem;
  margin-bottom: .8rem;
}

#lg-about-{{ section.id }} .lg-modal-title {
  font-size: 18px;
  font-weight: 600;
}

#lg-about-{{ section.id }} .lg-modal-close {
  background: transparent;
  border: none;
  font-size: 20px;
  color: #888;
  cursor: pointer;
  line-height: 1;
}

#lg-about-{{ section.id }} .lg-modal-close:hover {
  color: #2B2B2B;
}

#lg-about-{{ section.id }} .lg-modal .field {
  margin-bottom: .7rem;
}

#lg-about-{{ section.id }} .lg-modal label {
  display: block;
  font-size: 13px;
  font-weight: 500;
  margin-bottom: .2rem;
}

#lg-about-{{ section.id }} .lg-modal input,
#lg-about-{{ section.id }} .lg-modal textarea {
  width: 100%;
  border: 1px solid rgba(0,0,0,.08);
  border-radius: 8px;
  padding: .45rem .55rem;
  font-size: 15px;
}

#lg-about-{{ section.id }} .lg-modal textarea {
  min-height: 110px;
  resize: vertical;
}

@keyframes lgFadeIn {
  from {opacity: 0;}
  to {opacity: 1;}
}
@keyframes lgZoomIn {
  from {transform: scale(.94);}
  to {transform: scale(1);}
}

/* Responsive */
@media (max-width: 991px){
  #lg-about-{{ section.id }} .lg-hero,
  #lg-about-{{ section.id }} .lg-feature-box,
  #lg-about-{{ section.id }} .lg-faq-wrap {
    grid-template-columns: 1fr;
  }
  #lg-about-{{ section.id }} .lg-audience-cards {
    grid-template-columns: repeat(2,1fr);
  }
}

@media (max-width: 767px){
  #lg-about-{{ section.id }} .lg-audience-cards {
    grid-template-columns: 1fr;
  }
  #lg-about-{{ section.id }} .lg-btn {
    width: 100%;
    text-align: center;
  }
  #lg-about-{{ section.id }} .lg-modal {
    width: 100%;
  }
}

/* ================================
   1) Big desktop (max 1200px)
   ================================ */
@media (max-width: 1200px) {
  #lg-about-{{ section.id }} h1 {
    font-size: 36px;
  }
  #lg-about-{{ section.id }} .lg-audience-cards {
    gap: 1.1rem;
  }
}

/* ================================
   2) Laptop / landscape tablet (max 1024px)
   ================================ */
@media (max-width: 1024px) {
  #lg-about-{{ section.id }} .lg-hero,
  #lg-about-{{ section.id }} .lg-faq-wrap,
  #lg-about-{{ section.id }} .lg-feature-box {
    grid-template-columns: 1fr;
  }

  #lg-about-{{ section.id }} .lg-hero-img,
  #lg-about-{{ section.id }} .lg-faq-img {
    min-height: 280px;
  }

  #lg-about-{{ section.id }} .lg-audience-cards {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}

/* ================================
   3) Tablet portrait (max 768px)
   ================================ */
@media (max-width: 768px) {
  #lg-about-{{ section.id }} h1 {
    font-size: 30px;
  }
  #lg-about-{{ section.id }} h2 {
    font-size: 26px;
  }
  #lg-about-{{ section.id }} p {
    font-size: 15px;
  }

  #lg-about-{{ section.id }} .lg-audience-cards {
    grid-template-columns: 1fr;
  }

  #lg-about-{{ section.id }} .lg-btn {
    width: 100%;
    text-align: center;
  }

  #lg-about-{{ section.id }} .lg-modal {
    width: 100%;
    max-height: 95vh;
    overflow-y: auto;
  }
}

/* ================================
   4) Small mobile (max 576px)
   ================================ */
@media (max-width: 576px) {
  #lg-about-{{ section.id }} .lg-audience {
    padding: 2.2rem 1.1rem;
  }
  #lg-about-{{ section.id }} .lg-feature-box {
    border-radius: 14px;
  }
  #lg-about-{{ section.id }} .lg-faq-box details {
    padding: .55rem .6rem;
  }
}

/* ================================
   5) Extra small (old phones, max 400px)
   ================================ */
@media (max-width: 400px) {
  #lg-about-{{ section.id }} h1 {
    font-size: 26px;
  }
  #lg-about-{{ section.id }} .lg-badge {
    font-size: 13px;
  }
  #lg-about-{{ section.id }} .lg-aud-card {
    padding: 1.1rem .8rem 1.2rem;
  }
  #lg-about-{{ section.id }} .lg-modal {
    padding: 1rem .8rem 1.1rem;
  }
}

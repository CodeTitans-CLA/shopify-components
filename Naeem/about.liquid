<div class="lg-about-wrap" id="lg-about-{{ section.id }}">
  <div class="lg-page-wrap {% if section.settings.layout_width == 'full' %}lg-width-full{% elsif section.settings.layout_width == 'boxed' %}lg-width-boxed{% else %}lg-width-default{% endif %}">
    <!-- HERO -->
    <section class="lg-hero lg-section-space">
      <div>
        {% if section.settings.hero_badge != blank %}
          <span class="lg-badge">{{ section.settings.hero_badge }}</span>
        {% endif %}
        <h1>{{ section.settings.hero_title }}</h1>
        <p>{{ section.settings.hero_text }}</p>
        {% if section.settings.hero_btn_label != blank %}
          <a class="lg-btn" {% if section.settings.hero_btn_link != blank %}href="{{ section.settings.hero_btn_link }}"{% endif %}>
            {{ section.settings.hero_btn_label }}
          </a>
        {% endif %}
      </div>
      <div class="lg-hero-img"></div>
    </section>

    <!-- FEATURE BOX -->
    <section class="lg-feature-box lg-section-space">
      <div class="lg-feature-left">
        <h3>{{ section.settings.feature_left_title }}</h3>
        {% for block in section.blocks %}
          {% if block.type == 'feature_item' %}
            <div class="lg-feat-item" {{ block.shopify_attributes }}>
              <span class="lg-feat-icon">
                {% if block.settings.feature_number != blank %}
                  {{ block.settings.feature_number }}
                {% else %}
                  {{ forloop.index }}
                {% endif %}
              </span>
              {{ block.settings.feature_text }}
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="lg-feature-right">
        <h3>{{ section.settings.feature_right_title }}</h3>
        <p>{{ section.settings.feature_right_text }}</p>
        <ul class="lg-checklist">
          {% for block in section.blocks %}
            {% if block.type == 'check_item' %}
              <li {{ block.shopify_attributes }}>{{ block.settings.check_text }}</li>
            {% endif %}
          {% endfor %}
        </ul>
        {% if section.settings.feature_btn_label != blank %}
          <a class="lg-btn secondary" {% if section.settings.feature_btn_link != blank %}href="{{ section.settings.feature_btn_link }}"{% endif %}>
            {{ section.settings.feature_btn_label }}
          </a>
        {% endif %}
      </div>
    </section>

    <!-- FAQ -->
    <section class="lg-faq-wrap lg-section-space">
      <div class="lg-faq-img"></div>
      <div class="lg-faq-box">
        <h3>{{ section.settings.faq_title }}</h3>
        <p>{{ section.settings.faq_intro }}</p>

        {% for block in section.blocks %}
          {% if block.type == 'faq_item' %}
            <details {% if block.settings.faq_open %}open{% endif %} {{ block.shopify_attributes }}>
              <summary>{{ block.settings.faq_question }}</summary>
              <p>{{ block.settings.faq_answer }}</p>
            </details>
          {% endif %}
        {% endfor %}

        {% if section.settings.faq_btn_label != blank %}
          <button type="button" class="lg-btn" id="lg-faq-btn-{{ section.id }}">
            {{ section.settings.faq_btn_label }}
          </button>
        {% endif %}
      </div>
    </section>
  </div>

  <!-- MODAL CONTACT -->
  <div class="lg-modal-overlay" id="lg-modal-overlay-{{ section.id }}">
    <div class="lg-modal" role="dialog" aria-modal="true" aria-label="{{ section.settings.modal_title }}">
      <div class="lg-modal-header">
        <h4 class="lg-modal-title">{{ section.settings.modal_title }}</h4>
        <button type="button" class="lg-modal-close" id="lg-modal-close-{{ section.id }}">&times;</button>
      </div>
      <p style="margin-bottom:.7rem;">{{ section.settings.modal_intro }}</p>
      {% form 'contact' %}
        <div class="field">
          <label for="lg-name-{{ section.id }}">{{ section.settings.modal_name_label }}</label>
          <input id="lg-name-{{ section.id }}" type="text" name="contact[name]" required>
        </div>
        <div class="field">
          <label for="lg-email-{{ section.id }}">{{ section.settings.modal_email_label }}</label>
          <input id="lg-email-{{ section.id }}" type="email" name="contact[email]" required>
        </div>
        <div class="field">
          <label for="lg-message-{{ section.id }}">{{ section.settings.modal_message_label }}</label>
          <textarea id="lg-message-{{ section.id }}" name="contact[body]" required></textarea>
        </div>
        <input type="hidden" name="contact[topic]" value="{{ section.settings.modal_hidden_topic }}">
        <button type="submit" class="lg-btn" style="width:100%;text-align:center;">{{ section.settings.modal_submit_label }}</button>
        {% if form.posted_successfully? %}
          <p style="margin-top:.6rem;color:green;">{{ section.settings.modal_success_text }}</p>
        {% endif %}
        {% if form.errors %}
          <p style="margin-top:.6rem;color:red;">{{ form.errors | default_errors }}</p>
        {% endif %}
      {% endform %}
    </div>
  </div>
</div>

<script>
  (function() {
    var btn = document.getElementById('lg-faq-btn-{{ section.id }}');
    var overlay = document.getElementById('lg-modal-overlay-{{ section.id }}');
    var closeBtn = document.getElementById('lg-modal-close-{{ section.id }}');

    function openModal() {
      if (overlay) {
        overlay.classList.add('is-open');
      }
    }
    function closeModal() {
      if (overlay) {
        overlay.classList.remove('is-open');
      }
    }

    if (btn) {
      btn.addEventListener('click', openModal);
    }
    if (closeBtn) {
      closeBtn.addEventListener('click', closeModal);
    }
    if (overlay) {
      overlay.addEventListener('click', function(e) {
        if (e.target === overlay) {
          closeModal();
        }
      });
    }
    document.addEventListener('keyup', function(e) {
      if (e.key === 'Escape') {
        closeModal();
      }
    });
  })();
</script>


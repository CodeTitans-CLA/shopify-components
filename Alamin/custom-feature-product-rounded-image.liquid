{%- style -%}
  .premium-section-{{ section.id }} {
    background-color: {{ section.settings.section_bg }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    font-family: 'Inter', sans-serif;
  }

  .header-group-{{ section.id }} {
    text-align: center;
    margin-bottom: 50px;
    padding: 0 20px;
  }

  .main-title-{{ section.id }} {
    font-size: {{ section.settings.title_font_size }}px;
    color: {{ section.settings.title_color }};
    font-weight: 800;
    text-transform: uppercase;
    margin: 0 0 10px 0;
  }

  .sub-title-{{ section.id }} {
    font-size: {{ section.settings.subtitle_font_size }}px;
    color: {{ section.settings.subtitle_color }};
    font-family: {{ section.settings.subtitle_font.family }}, {{ section.settings.subtitle_font.fallback_families }};
    margin: 0 auto;
    max-width: 700px;
    line-height: 1.6;
  }

  .grid-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.cols_desktop }}, minmax(0, 1fr));
    gap: 30px;
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .p-card-{{ section.id }} {
    background: {{ section.settings.card_bg }};
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 20px 45px rgba(0,0,0,0.07);
    position: relative;
    transition: 0.4s ease;
  }
  
  .p-card-{{ section.id }}:hover {
    transform: translateY(-12px);
  }

  /* Fixed Curve Background Customization */
  .curve-bg-{{ section.id }} {
    background-color: {{ section.settings.curve_bg_color }} !important;
    height: 120px;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }

  .card-content-{{ section.id }} {
    position: relative;
    z-index: 2;
    background: {{ section.settings.card_bg }};
    margin-top: 45px;
    border-radius: 45px 45px 0 0;
    padding: 30px 20px 10px;
    text-align: center;
  }

  .p-card-title-{{ section.id }} {
    color: {{ section.settings.card_text_color }};
    font-size: {{ section.settings.p_title_size }}px;
    font-weight: 900;
    text-transform: uppercase;
    margin: 0 0 10px;
    min-height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .p-card-desc-{{ section.id }} {
    font-size: 13px;
    color: #666;
    margin-bottom: 20px;
    height: 40px;
    overflow: hidden;
  }

  .p-image-{{ section.id }} {
    width: 100%;
    height: 230px;
    border-radius: 20px;
    overflow: hidden;
    background: #f5f5f5;
    margin-bottom: 20px;
  }

  .p-image-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .p-meta-{{ section.id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .p-price-{{ section.id }} {
    font-size: 34px;
    font-weight: 900;
    color: #111;
  }

  .p-stars-{{ section.id }} { color: #ffcc00; }

  .atc-btn-{{ section.id }} {
    display: block;
    width: 100%;
    background-color: {{ section.settings.card_btn_bg }};
    color: {{ section.settings.card_btn_text_color }};
    border: none;
    padding: 22px;
    font-size: 18px;
    font-weight: 900;
    text-transform: uppercase;
    cursor: pointer;
    border-radius: 0 0 30px 30px;
  }

  .bottom-cta-{{ section.id }} {
    text-align: center;
    margin-top: 60px;
  }

  .main-btn-{{ section.id }} {
    display: inline-block;
    background-color: {{ section.settings.main_cta_bg }};
    color: {{ section.settings.main_cta_text_color }};
    padding: 20px 55px;
    border-radius: 60px;
    text-decoration: none;
    font-weight: 800;
    font-size: {{ section.settings.main_cta_font_size }}px;
    text-transform: uppercase;
    transition: 0.3s;
  }

  @media (max-width: 768px) {
    .grid-{{ section.id }} { grid-template-columns: 1fr; }
  }
{%- endstyle -%}

<section class="premium-section-{{ section.id }}">
  <div class="header-group-{{ section.id }}">
    <h2 class="main-title-{{ section.id }}">{{ section.settings.title }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="sub-title-{{ section.id }}">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>

  <div class="grid-{{ section.id }}">
    {%- assign collection = collections[section.settings.collection] -%}
    
    {% for product in collection.products limit: section.settings.limit %}
      <div class="p-card-{{ section.id }}">
        <div class="curve-bg-{{ section.id }}"></div>
        
        <div class="card-content-{{ section.id }}">
          <h3 class="p-card-title-{{ section.id }}">{{ product.title }}</h3>
          <p class="p-card-desc-{{ section.id }}">{{ product.description | strip_html | truncate: 80 }}</p>

          <div class="p-image-{{ section.id }}">
            <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}" loading="lazy">
          </div>

          <div class="p-meta-{{ section.id }}">
            <span class="p-price-{{ section.id }}">{{ product.price | money_without_trailing_zeros }}</span>
            <span class="p-stars-{{ section.id }}">★★★★☆</span>
          </div>
        </div>

        <form method="post" action="/cart/add">
          <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
          <button type="submit" class="atc-btn-{{ section.id }}">
            {{ section.settings.card_btn_text }}
          </button>
        </form>
      </div>
    {% else %}
      {% for i in (1..3) %}
        <div class="p-card-{{ section.id }}">
          <div class="curve-bg-{{ section.id }}"></div>
          <div class="card-content-{{ section.id }}">
            <h3 class="p-card-title-{{ section.id }}">Sample Product</h3>
            <p class="p-card-desc-{{ section.id }}">Select a collection to show your store products here.</p>
            <div class="p-image-{{ section.id }}">{{ 'product-' | append: i | placeholder_svg_tag }}</div>
          </div>
          <button class="atc-btn-{{ section.id }}">Add to Cart</button>
        </div>
      {% endfor %}
    {% endfor %}
  </div>

  {% if section.settings.show_main_cta %}
    <div class="bottom-cta-{{ section.id }}">
      <a href="{{ collection.url | default: '#' }}" class="main-btn-{{ section.id }}">
        {{ section.settings.main_cta_text }}
      </a>
    </div>
  {% endif %}
</section>

{% schema %}

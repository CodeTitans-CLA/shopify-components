    },
    {
      "type": "range",
      "id": "p_title_size",
      "min": 16,
      "max": 32,
      "default": 24,
      "label": "Product Title Size"
    },
    {
      "type": "header",
      "content": "Card Button"
    },
    {
      "type": "text",
      "id": "card_btn_text",
      "label": "Button Label",
      "default": "Add to Cart"
    },
    {
      "type": "color",
      "id": "card_btn_bg",
      "label": "Button BG",
      "default": "#fbbf24"
    },
    {
      "type": "color",
      "id": "card_btn_text_color",
      "label": "Button Text",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Main Section CTA"
    },
    {
      "type": "checkbox",
      "id": "show_main_cta",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "main_cta_text",

    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "default": 70,
      "label": "Bottom Spacing"
    }
  ],
  "presets": [
    {
      "name": "Premium Feature Collect"
    }
  ]

    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#4b5563"
    },
    {
      "type": "font_picker",
      "id": "subtitle_font",
      "label": "Subtitle Font Style",
      "default": "sans-serif"
    },
    {
      "type": "range",
      "id": "subtitle_font_size",
      "min": 12,
      "max": 24,
      "default": 18,
      "label": "Subtitle Font Size"
    },
    {
      "type": "header",
      "content": "Card Styling"
    },
    {
      "type": "color",
      "id": "card_bg",
      "label": "Card Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "curve_bg_color",
      "label": "Curved Header Color",
